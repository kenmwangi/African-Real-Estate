{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@types": ["src/utils/types"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "src/components/MessageWidget.jsx",
    "src/lib/firebaseClientInit.js",
    "src/lib/uploadImage.js",
    "src/lib/mongodb/mongodbClient.js",
    "src/pages/contact.jsx",
    "src/pages/auth/signin.jsx",
    "src/pages/api/estate/index.js",
    "src/pages/api/estate/insert.js",
    "src/pages/api/estate/[id].js",
    "src/components/Header.jsx",
    "src/components/CreateProperty/index.jsx",
    "src/components/FormAlert/index.jsx"
  ],
  "exclude": ["node_modules"]
}
